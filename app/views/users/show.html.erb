<%= render 'layouts/nav' %>

<div class="ui grid container">
  <div class="centered row" style="margin-top: 48px;">
    <div class="twelve wide column">
      <%= render 'layouts/notice' %>
      <div class="ui segment" style="padding: 40px 48px 36px 48px;">

        <h2 class="ui header">
          Profile
          <div class="sub header">
            View your profile and courses
          </div>
        </h2>

        <table class="ui table">
          <tbody>
            <tr>
              <td class="collapsing">
                <i class="user grey icon"></i>
                <%= @user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <i class="mail grey icon"></i>
                <%= @user.email %>
              </td>
            </tr>
          </tbody>
        </table>
        <% if @user == current_user %>
          <%= link_to 'Edit', edit_user_path(@user), class: 'ui sky button' %>
          <%= link_to 'Change Password', edit_user_path(@user), class: 'ui button' %>
          <%= link_to 'Delete Account', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui google plus button' %>
        <% end %>

        <% if !@user.instructor_courses.empty? %>
        <h3 class="ui header">
          <i class="sky student tiny icon"></i>
          <div class="content">
            Instructor Courses
          </div>
        </h3>
        <table class="ui table">
          <tbody>

              <% @user.instructor_courses.each do |course| %>
                <tr>
                  <td><%= course.name %></td>
                  <td class="collapsing"><%= link_to 'View', course, class: 'ui button' %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
        <% end %>

        <% if !@user.student_courses.empty? %>
        <h3 class="ui header">
          <i class="yellow pencil alternate tiny icon"></i>
          <div class="content">
            Student Courses
          </div>
        </h3>
        <table class="ui table">
          <tbody>
              <% @user.student_courses.each do |course| %>
                <tr>
                  <td><%= course.name %></td>
                  <td class="collapsing">
                    <div class="ui vertical buttons">
                      <%= link_to 'View', course, class: 'ui button' %>
                    </div>
                  </td>
                </tr>
              <% end %>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div
