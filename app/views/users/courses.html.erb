<%= render 'layouts/nav' %>

<div class="ui grid container">
  <div class="centered row" style="margin-top: 36px;">
    <div class="sixteen wide column">
      <h2 class="ui header">
        Courses
        <div class="sub header">
          View your instructed and favorited courses
        </div>
      </h2>

      <h3 class="ui header">
        <i class="sky student tiny icon"></i>
        <div class="content">
          Instructor Courses
        </div>
      </h3>

      <h3 class="ui header">
        <i class="yellow star tiny icon"></i>
        <div class="content">
          Favorite Student Courses
        </div>
      </h3>

      <table class="ui table">
        <thead>
          <tr>
            <th class="three wide">Name</th>
            <th class="twelve wide">Description</th>
            <th colspan="3">
              <%= link_to 'New Course', new_course_path, class: 'ui fluid sky button' %>
            </th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.name %></td>
              <td><%= course.description %></td>
              <td><%= link_to 'Show', course %></td>
              <td><%= link_to 'Edit', edit_course_path(course) %></td>
              <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>
